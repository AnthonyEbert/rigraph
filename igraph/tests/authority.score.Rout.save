> ashs <- function(graph, as=TRUE) {
+   mscale <- function(x) {
+     if (sd(x)!=0) { x <- scale(x) }
+     if (x[1] < 0) { x <- -x       }
+     x
+   }
+   A <- get.adjacency(graph)
+   if (as) { 
+     s1 <- eigen(t(A) %*% A)$vectors[,1]
+     s2 <- authority.score(graph)$vector
+   } else {
+     s1 <- eigen(A %*% t(A))$vectors[,1]
+     s2 <- hub.score(graph)$vector
+   }    
+   all(abs(mscale(s1) - mscale(s2)) < 1e-12)
+ }
